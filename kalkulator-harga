<body class="bg-white dark:bg-dark-bg text-dark-text dark:text-light-text antialiased">
    <script>
    function kumudaExperience(config) {
        return {
            lang: 'id',
            darkMode: false,
            mobileMenuOpen: false,
            currentPage: config.currentPage || 'home',

            // Data dan logika untuk kalkulator
            calculator: {
                step: 1,
                services: [
                    { id: 'web', name: 'Pengembangan Website', en_name: 'Website Development', basePrice: 5000000, icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4' },
                    { id: 'app', name: 'Aplikasi Mobile', en_name: 'Mobile App Development', basePrice: 15000000, icon: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z' },
                    { id: 'branding', name: 'Digital Marketing & Branding', en_name: 'Digital Marketing & Branding', basePrice: 3000000, icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' },
                ],
                features: {
                    web: [
                        { id: 'web-ecommerce', name: 'Toko Online (E-commerce)', en_name: 'Online Store (E-commerce)', price: 4000000, selected: false },
                        { id: 'web-booking', name: 'Sistem Booking/Reservasi', en_name: 'Booking/Reservation System', price: 3500000, selected: false },
                        { id: 'web-cms', name: 'Blog/Manajemen Konten', en_name: 'Blog/Content Management', price: 1500000, selected: false },
                        { id: 'web-integrasi', name: 'Integrasi Pihak Ketiga (API)', en_name: 'Third-Party Integration (API)', price: 2500000, selected: false },
                    ],
                    app: [
                        { id: 'app-ecommerce', name: 'Fungsi Jual-Beli', en_name: 'E-commerce Functionality', price: 8000000, selected: false },
                        { id: 'app-notif', name: 'Push Notifications', en_name: 'Push Notifications', price: 3000000, selected: false },
                        { id: 'app-maps', name: 'Integrasi Peta & Lokasi', en_name: 'Map & Location Integration', price: 4000000, selected: false },
                        { id: 'app-payment', name: 'Gerbang Pembayaran', en_name: 'Payment Gateway', price: 4500000, selected: false },
                    ],
                    branding: [
                        { id: 'branding-logo', name: 'Desain Logo Profesional', en_name: 'Professional Logo Design', price: 1500000, selected: false },
                        { id: 'branding-kit', name: 'Social Media Kit', en_name: 'Social Media Kit', price: 2000000, selected: false },
                        { id: 'branding-copywriting', name: 'Copywriting untuk Iklan', en_name: 'Ad Copywriting', price: 1000000, selected: false },
                    ]
                },
                selectedService: '',
                totalPrice: 0,
                
                selectService(serviceId) {
                    this.selectedService = serviceId;
                    this.calculateTotal();
                    this.step = 2;
                },

                resetCalculator() {
                    this.step = 1;
                    this.selectedService = '';
                    Object.values(this.features).flat().forEach(feature => feature.selected = false);
                    this.totalPrice = 0;
                },

                calculateTotal() {
                    const service = this.services.find(s => s.id === this.selectedService);
                    if (!service) {
                        this.totalPrice = 0;
                        return;
                    }
                    let total = service.basePrice;
                    const activeFeatures = this.features[this.selectedService] || [];
                    activeFeatures.forEach(feature => {
                        if (feature.selected) {
                            total += feature.price;
                        }
                    });
                    this.totalPrice = total;
                },

                formatCurrency(amount) {
                    return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(amount);
                }
            },

            toggleLang() { this.lang = this.lang === 'id' ? 'en' : 'id'; document.documentElement.lang = this.lang; },
            toggleTheme() { this.darkMode = !this.darkMode; localStorage.setItem('darkMode', this.darkMode); },
            init() {
                if (localStorage.getItem('darkMode') !== null) { this.darkMode = localStorage.getItem('darkMode') === 'true'; }
                AOS.init({ once: true, duration: 800, offset: 50 });
            }
        };
    }
    </script>
    
    <header class="bg-white/80 dark:bg-dark-bg/80 backdrop-blur-sm sticky top-0 z-50 transition-colors duration-300">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div class="flex-shrink-0">
                    <a href="index.html" class="text-2xl font-bold font-poppins text-primary-orange dark:text-dark-orange">Kumuda</a>
                </div>
                <nav class="hidden md:flex md:space-x-8">
                    <a href="index.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange" x-show="lang === 'id'">Beranda</a>
                    <a href="layanan.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange" x-show="lang === 'id'">Layanan</a>
                    <a href="portofolio.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange" x-show="lang === 'id'">Portofolio</a>
                    <a href="blog.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange" x-show="lang === 'id'">Blog</a>
                    <a href="kontak.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange" x-show="lang === 'id'">Kontak</a>
                </nav>
                <div class="hidden md:flex items-center space-x-4">
                    <a href="kalkulator-harga.html" class="bg-primary-orange hover:bg-opacity-90 dark:bg-dark-orange text-white font-bold py-2 px-4 rounded-full" x-show="lang === 'id'">Konsultasi Gratis</a>
                </div>
            </div>
        </div>
    </header>

    <main class="py-20 lg:py-24">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12" data-aos="fade-up">
                    <h1 class="text-4xl lg:text-5xl font-bold font-poppins" x-show="lang === 'id'">Kalkulator Biaya Proyek</h1>
                    <h1 class="text-4xl lg:text-5xl font-bold font-poppins" x-show="lang === 'en'" x-cloak>Project Cost Calculator</h1>
                    <p class="mt-4 text-lg text-gray-600 dark:text-gray-300" x-show="lang === 'id'">Dapatkan estimasi instan untuk proyek Anda. Pilih layanan untuk memulai.</p>
                    <p class="mt-4 text-lg text-gray-600 dark:text-gray-300" x-show="lang === 'en'" x-cloak>Get an instant estimate for your project. Select a service to begin.</p>
                </div>

                <div x-show="calculator.step === 1" data-aos="fade-up">
                    <h2 class="text-2xl font-bold text-center mb-8" x-show="lang === 'id'">Langkah 1: Pilih Layanan Utama Anda</h2>
                    <h2 class="text-2xl font-bold text-center mb-8" x-show="lang === 'en'" x-cloak>Step 1: Choose Your Main Service</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <template x-for="service in calculator.services" :key="service.id">
                            <div @click="calculator.selectService(service.id)" class="p-8 bg-gray-50 dark:bg-gray-800/50 rounded-lg text-center cursor-pointer hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
                                <div class="bg-primary-blue/10 dark:bg-dark-blue/20 text-primary-blue dark:text-dark-blue rounded-full p-4 inline-flex">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="service.icon" /></svg>
                                </div>
                                <h3 class="mt-4 text-xl font-bold" x-text="lang === 'id' ? service.name : service.en_name"></h3>
                                <p class="mt-2 text-gray-500" x-show="lang === 'id'">Mulai dari</p>
                                <p class="mt-2 text-gray-500" x-show="lang === 'en'" x-cloak>Starts from</p>
                                <p class="font-semibold text-primary-orange dark:text-dark-orange" x-text="calculator.formatCurrency(service.basePrice)"></p>
                            </div>
                        </template>
                    </div>
                </div>

                <div x-show="calculator.step === 2" x-cloak data-aos="fade-up">
                    <div class="grid lg:grid-cols-2 gap-12">
                        <div>
                            <h2 class="text-2xl font-bold mb-6" x-show="lang === 'id'">Langkah 2: Pilih Fitur Tambahan</h2>
                            <h2 class="text-2xl font-bold mb-6" x-show="lang === 'en'" x-cloak>Step 2: Select Additional Features</h2>
                            <div class="space-y-4">
                                <template x-for="feature in calculator.features[calculator.selectedService]" :key="feature.id">
                                    <label class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800 transition">
                                        <input type="checkbox" x-model="feature.selected" @change="calculator.calculateTotal()" class="h-5 w-5 rounded text-primary-orange focus:ring-primary-orange">
                                        <span class="ml-4 flex-grow text-gray-800 dark:text-gray-200" x-text="lang === 'id' ? feature.name : feature.en_name"></span>
                                        <span class="font-semibold text-gray-600 dark:text-gray-400" x-text="'+ ' + calculator.formatCurrency(feature.price)"></span>
                                    </label>
                                </template>
                            </div>
                        </div>

                        <div class="p-8 bg-blue-50 dark:bg-blue-900/20 rounded-lg self-start sticky top-24">
                            <h2 class="text-2xl font-bold mb-6 border-b pb-4 border-blue-200 dark:border-blue-700" x-show="lang === 'id'">Estimasi Biaya</h2>
                            <h2 class="text-2xl font-bold mb-6 border-b pb-4 border-blue-200 dark:border-blue-700" x-show="lang === 'en'" x-cloak>Cost Estimate</h2>
                            
                            <div class="space-y-3 text-lg">
                                <div class="flex justify-between">
                                    <span x-text="lang === 'id' ? calculator.services.find(s => s.id === calculator.selectedService)?.name : calculator.services.find(s => s.id === calculator.selectedService)?.en_name"></span>
                                    <span x-text="calculator.formatCurrency(calculator.services.find(s => s.id === calculator.selectedService)?.basePrice)"></span>
                                </div>
                                <template x-for="feature in calculator.features[calculator.selectedService]?.filter(f => f.selected)" :key="feature.id">
                                    <div class="flex justify-between text-gray-600 dark:text-gray-300">
                                        <span x-text="lang === 'id' ? feature.name : feature.en_name"></span>
                                        <span x-text="'+ ' + calculator.formatCurrency(feature.price)"></span>
                                    </div>
                                </template>
                            </div>

                            <div class="mt-6 pt-6 border-t border-blue-200 dark:border-blue-700">
                                <div class="flex justify-between items-center">
                                    <span class="text-xl font-bold" x-show="lang === 'id'">TOTAL</span>
                                    <span class="text-xl font-bold" x-show="lang === 'en'" x-cloak>TOTAL</span>
                                    <span class="text-3xl font-bold text-primary-orange" x-text="calculator.formatCurrency(calculator.totalPrice)"></span>
                                </div>
                            </div>

                            <button @click="calculator.resetCalculator()" class="mt-8 w-full text-center py-3 rounded-full font-semibold bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition">
                                <span x-show="lang === 'id'">Hitung Ulang</span>
                                <span x-show="lang === 'en'" x-cloak>Calculate Again</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
