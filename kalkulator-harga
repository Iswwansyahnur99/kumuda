<!DOCTYPE html>
<html lang="id" x-data="kumudaExperience({ currentPage: 'kalkulator' })" x-bind:class="{ 'dark': darkMode }" x-init="init()">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalkulator Estimasi Harga - Kumuda Experience</title>
    <meta name="description" content="Dapatkan estimasi harga instan untuk proyek digital Anda bersama Kumuda Experience. Coba kalkulator interaktif kami sekarang.">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; }
        h1, h2, h3, h4, h5, h6 { font-family: 'Poppins', sans-serif; }
        [x-cloak] { display: none !important; }
    </style>
    <script>
        tailwind.config = { darkMode: 'class', theme: { extend: { colors: { 'primary-orange': '#FF7A00', 'primary-blue': '#0085FF', 'accent-yellow': '#FFC700', 'dark-text': '#1E1E1E', 'dark-bg': '#121212', 'dark-orange': '#FF8C2B', 'dark-blue': '#33A1FF', 'dark-yellow': '#FFD340', 'light-text': '#F5F5F5', }, fontFamily: { 'poppins': ['Poppins', 'sans-serif'], 'inter': ['Inter', 'sans-serif'], } } } }
    </script>
</head>
<body class="bg-white dark:bg-dark-bg text-dark-text dark:text-light-text antialiased">
    <script>
        function kumudaExperience(config) {
            return {
                lang: 'id', 
                darkMode: false, 
                mobileMenuOpen: false, 
                currentPage: config.currentPage || 'home',
                // Data dan logika untuk kalkulator
                calculator: {
                    step: 1,
                    services: [
                        { id: 'web', name: 'Pengembangan Website', basePrice: 5000000, icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4' },
                        { id: 'app', name: 'Aplikasi Mobile', basePrice: 15000000, icon: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z' },
                        { id: 'branding', name: 'Digital Marketing & Branding', basePrice: 3000000, icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' }
                    ],
                    features: {
                        web: [
                            { id: 'web-ecommerce', name: 'Toko Online (E-commerce)', price: 4000000 },
                            { id: 'web-booking', name: 'Sistem Booking/Reservasi', price: 3500000 },
                            { id: 'web-cms', name: 'Blog/Manajemen Konten', price: 1500000 },
                            { id: 'web-integrasi', name: 'Integrasi Pihak Ketiga (API)', price: 2500000 },
                        ],
                        app: [
                            { id: 'app-ecommerce', name: 'Fungsi Jual-Beli', price: 8000000 },
                            { id: 'app-notif', name: 'Push Notifications', price: 2000000 },
                            { id: 'app-maps', name: 'Integrasi Peta & GPS', price: 4000000 },
                            { id: 'app-auth', name: 'Login & Manajemen User', price: 3000000 },
                        ],
                        branding: [
                            { id: 'branding-logo', name: 'Desain Logo & Brand Guideline', price: 2500000 },
                            { id: 'branding-sosmed', name: 'Manajemen Sosial Media (Bulanan)', price: 2000000 },
                            { id: 'branding-seo', name: 'Optimasi Mesin Pencari (SEO)', price: 3000000 },
                        ]
                    },
                    selectedService: null,
                    selectedFeatures: [],
                    userName: '',
                    userEmail: '',
                    get serviceName() {
                        if (!this.selectedService) return '';
                        const service = this.services.find(s => s.id === this.selectedService);
                        return service ? service.name : '';
                    },
                    get totalPrice() {
                        if (!this.selectedService) return 0;
                        const service = this.services.find(s => s.id === this.selectedService);
                        let total = service.basePrice;
                        const featuresForService = this.features[this.selectedService] || [];
                        this.selectedFeatures.forEach(featureId => {
                            const feature = featuresForService.find(f => f.id === featureId);
                            if (feature) {
                                total += feature.price;
                            }
                        });
                        return total;
                    },
                    formatCurrency(amount) {
                        return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(amount);
                    },
                    nextStep() { if (this.step < 3) this.step++; },
                    prevStep() { if (this.step > 1) this.step--; },
                    selectService(serviceId) {
                        this.selectedService = serviceId;
                        this.selectedFeatures = [];
                        this.nextStep();
                    }
                },
                toggleLang() { this.lang = this.lang === 'id' ? 'en' : 'id'; document.documentElement.lang = this.lang; },
                toggleTheme() { this.darkMode = !this.darkMode; localStorage.setItem('darkMode', this.darkMode); },
                init() { if (localStorage.getItem('darkMode') !== null) { this.darkMode = localStorage.getItem('darkMode') === 'true'; } AOS.init({ once: true, duration: 800, offset: 50 }); }
            }
        }
    </script>

    <header class="bg-white/80 dark:bg-dark-bg/80 backdrop-blur-sm sticky top-0 z-50 transition-colors duration-300">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div class="flex-shrink-0"><a href="index.html" class="text-2xl font-bold font-poppins text-primary-orange dark:text-dark-orange">Kumuda</a></div>
                <nav class="hidden md:flex md:space-x-8">
                    <a href="index.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange dark:hover:text-dark-orange">Beranda</a>
                    <a href="layanan.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange dark:hover:text-dark-orange">Layanan</a>
                    <a href="portofolio.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange dark:hover:text-dark-orange">Portofolio</a>
                    <a href="blog.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange dark:hover:text-dark-orange">Blog</a>
                    <a href="kontak.html" class="font-semibold text-gray-700 dark:text-gray-300 hover:text-primary-orange dark:hover:text-dark-orange">Kontak</a>
                </nav>
                <div class="hidden md:flex items-center space-x-4">
                    <a href="kalkulator-harga.html" class="bg-primary-orange hover:bg-opacity-90 dark:bg-dark-orange dark:hover:bg-opacity-90 text-white font-bold py-2 px-4 rounded-full transition-transform transform hover:scale-105">Konsultasi Gratis</a>
                </div>
                <div class="md:hidden flex items-center">
                    <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-dark-text dark:text-light-text focus:outline-none">
                        <svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M4 6h16M4 12h16M4 18h16"></path></svg>
                    </button>
                </div>
            </div>
        </div>
        <div x-show="mobileMenuOpen" @click.away="mobileMenuOpen = false" class="md:hidden bg-white dark:bg-dark-bg" x-transition>
            </div>
    </header>

    <main>
        <section class="bg-gray-50 dark:bg-gray-800/50 py-20 lg:py-28">
            <div class="container mx-auto px-4 text-center" data-aos="fade-up">
                <h1 class="text-4xl lg:text-5xl font-bold font-poppins">Kalkulator Estimasi Harga</h1>
                <p class="mt-4 text-lg max-w-2xl mx-auto text-gray-600 dark:text-gray-300">Dapatkan gambaran biaya proyek Anda dalam beberapa langkah mudah. Hasil ini adalah estimasi awal.</p>
            </div>
        </section>

        <section class="py-20 lg:py-24">
            <div class="container mx-auto px-4 max-w-2xl">
                <div x-data="calculator" class="bg-white dark:bg-gray-800/50 p-8 rounded-lg shadow-lg">
                    <form name="price-quote" method="POST" data-netlify="true" netlify-honeypot="bot-field">
                        <input type="hidden" name="form-name" value="price-quote" />
                        <p class="hidden"><label>Don’t fill this out if you’re human: <input name="bot-field" /></label></p>
                        
                        <div x-show="step === 1" x-cloak data-aos="fade-in">
                            <h2 class="text-2xl font-bold text-center">Langkah 1: Pilih Layanan Utama</h2>
                            <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
                                <template x-for="service in services" :key="service.id">
                                    <button @click.prevent="selectService(service.id)" type="button" class="text-center p-6 border-2 dark:border-gray-600 rounded-lg hover:border-primary-orange dark:hover:border-dark-orange hover:bg-primary-orange/5 dark:hover:bg-dark-orange/10 transition">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-primary-blue dark:text-dark-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" :d="service.icon" /></svg>
                                        <h3 class="mt-4 font-semibold" x-text="service.name"></h3>
                                    </button>
                                </template>
                            </div>
                        </div>

                        <div x-show="step === 2" x-cloak data-aos="fade-in">
                            <h2 class="text-2xl font-bold text-center">Langkah 2: Pilih Fitur Tambahan</h2>
                            <p class="text-center text-gray-500 dark:text-gray-400 mt-1" x-text="`Untuk layanan: ${serviceName}`"></p>
                            
                            <div class="mt-8 space-y-4">
                                <template x-if="features[selectedService]">
                                    <template x-for="feature in features[selectedService]" :key="feature.id">
                                        <label class="flex items-center p-4 border dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700">
                                            <input type="checkbox" :value="feature.id" x-model="selectedFeatures" class="h-5 w-5 rounded text-primary-orange focus:ring-primary-orange">
                                            <span class="ml-4 text-lg" x-text="feature.name"></span>
                                            <span class="ml-auto font-semibold text-primary-orange dark:text-dark-orange" x-text="`+ ${formatCurrency(feature.price)}`"></span>
                                        </label>
                                    </template>
                                </template>
                            </div>

                            <div class="mt-8 flex justify-between">
                                <button @click.prevent="prevStep()" type="button" class="py-2 px-6 bg-gray-200 dark:bg-gray-600 font-semibold rounded-full hover:bg-gray-300 dark:hover:bg-gray-500 transition">&larr; Kembali</button>
                                <button @click.prevent="nextStep()" type="button" class="py-2 px-6 bg-primary-blue text-white font-bold rounded-full hover:bg-opacity-90 transition">Lanjutkan &rarr;</button>
                            </div>
                        </div>

                        <div x-show="step === 3" x-cloak data-aos="fade-in">
                            <h2 class="text-2xl font-bold text-center">Langkah Terakhir: Dapatkan Estimasi Anda!</h2>
                            <div class="mt-8 p-6 bg-primary-blue/10 dark:bg-dark-blue/20 rounded-lg text-center">
                                <p class="text-lg">Estimasi Biaya Proyek:</p>
                                <p class="text-4xl font-bold font-poppins text-primary-orange dark:text-dark-orange" x-text="formatCurrency(totalPrice)"></p>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">*Harga merupakan estimasi awal dan dapat berubah setelah diskusi lebih lanjut.</p>
                            </div>

                            <div class="mt-8">
                                <p class="text-center">Lengkapi data di bawah ini dan tim kami akan segera menghubungi Anda dengan penawaran detail.</p>
                                <div class="mt-6 space-y-4">
                                    <input type="hidden" name="layanan_dipilih" :value="serviceName">
                                    <input type="hidden" name="fitur_dipilih" :value="selectedFeatures.join(', ')">
                                    <input type="hidden" name="estimasi_harga" :value="formatCurrency(totalPrice)">
                                    
                                    <div>
                                        <label for="userName" class="font-semibold">Nama Anda</label>
                                        <input type="text" id="userName" name="name" x-model="userName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-orange focus:ring focus:ring-primary-orange focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600" required>
                                    </div>
                                    <div>
                                        <label for="userEmail" class="font-semibold">Alamat Email</label>
                                        <input type="email" id="userEmail" name="email" x-model="userEmail" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-orange focus:ring focus:ring-primary-orange focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600" required>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-8 flex justify-between items-center">
                                <button @click.prevent="prevStep()" type="button" class="py-2 px-6 bg-gray-200 dark:bg-gray-600 font-semibold rounded-full hover:bg-gray-300 dark:hover:bg-gray-500 transition">&larr; Kembali</button>
                                <button type="submit" class="py-3 px-8 bg-primary-orange text-white font-bold rounded-full hover:bg-opacity-90 transition-transform transform hover:scale-105">Kirim & Dapatkan Penawaran</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-gray-100 dark:bg-dark-bg/50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="mt-16 border-t border-gray-200 dark:border-gray-700 pt-8 text-center text-gray-500 dark:text-gray-400">
                &copy; <span x-text="new Date().getFullYear()"></span> Kumuda Experience (PT Kumuda Kreasi Nusantara). All Rights Reserved.
            </div>
        </div>
    </footer>
</body>
